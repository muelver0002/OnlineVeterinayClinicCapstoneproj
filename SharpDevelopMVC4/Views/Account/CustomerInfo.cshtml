@model List<SharpDevelopMVC4.Models.Customer>
@{
	ViewBag.Title = "CustomerInfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
<style>
#p {
  float: right;
}
.aligncenter {
    text-align: center;
}
body{
    margin-top:20px;
    background:#FAFAFA;
}
.order-card {
    color: black;
}
.bg-c-blue {
    background: linear-gradient(45deg,#4099ff,#73b4ff);
}
</style>
</head>
 @if (Request.IsAuthenticated)
     {


 
          
     <div style="margin-top: 40px;" class="col-lg-12">
      @foreach(var product in Model)
			{
			<div class="card bg-c-blue order-card">
        <div class="card mt-4">
        <p class="aligncenter">
          	
          </p>
          <div class="card-body" >
            <h3 class="card-title" style="font-size: 60px; font-family: Copperplate font-weight: bold;">@product.Fullname</h3>
          
            <h4 style="  font-family: Arial, Helvetica, sans-serif;">@product.Address, @product.AddCity</h4>
            <p class="card-text"><a style="color:red">Contact Number</a>: @product.Number</p>
            <a  href="/Account/Edit/@product.Id" id="p" style="margin-left:15px;" class="btn btn-primary btn-lg btn-block text-uppercase">Edit</a>
            <a href="/Account/ChangePassword" id="p" style="margin-left:15px;" class="btn btn-primary btn-lg btn-block text-uppercase">Change Password</a>
          </div>
        </div>
           </div>
        }
         </div>
  
  }