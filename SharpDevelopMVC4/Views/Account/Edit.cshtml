@model SharpDevelopMVC4.Models.Customer
@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <section>
        
            <form action="/Account/edit?Id=@ViewBag.Id" method="post" class="form-horizontal">
            	 
            	 <div class="form-group">
                     <label>Fullname<label style="color:red">*</label>
                    <input class="form-control" type="text" id="" name="Fullname" value="@Model.Fullname" required />
                </div>  
               
                <div class="form-group">
                    <label>Address<label style="color:red">*</label>
                    <input class="form-control" type="text" id="" name="Address" value="@Model.Address" required/>
                </div>

                <div class="form-group">
                    <label>City<label style="color:red">*</label>
                    <input class="form-control" type="text" id="" name="AddCity" value="@Model.AddCity" required/>
                </div>
                         
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Update</button>
                     <a href="/Account/CustomerInfo" class="btn btn-secondary ">Cancel</a>
                     <p style="color:red">@ViewBag.message</p>
                </div>
                <div class="form-group">
                </div>				               
            </form>
            
        </section>
    </div>


</div>