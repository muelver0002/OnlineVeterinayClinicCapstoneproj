@model List<SharpDevelopMVC4.Models.Admission>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<head>
<meta name='viewport' content='width=device-width, initial-scale=1'>

<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
</head>

    <div class="table-responsive">
 <h1 style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">Admission Lists</h1>
 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
               

                <th> CustomerName</th>
                <th> Doctor</th>
                
                <th> Concern</th>
                
                <th> Petname</th>
                <th> Pettype</th>
                <th> Petbreed</th>
   
               
                <th> Date Start</th>
                <th> Date End</th>
               
                <th> Diagnose</th>
               
                
               
                <th>Action</th>
                
                
               
                
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                   

	                <td>@product.Customername</td>
	                <td>@product.DocName</td>
	               
	                <td>@product.Concern</td>
	                
	                <td>@product.Petname</td>
	                <td>@product.Pettype</td>
	                <td>@product.PetBreed</td>
	               
	               
	                
	                <td>@product.DateStart</td>
	                
	                <td>@product.DateEnd</td>
	                
	                
	                
	                 <td>@product.Diagnoselater</td>
	                
	                
	                
	               
	               
                    <td> <a href="/Admission/Delete/@product.Id" class="btn btn-warning btn-block text-uppercase" onclick="return confirm('Are you sure?')"><i class="fa fa-trash" style='font-size:20px'></i></a></td>
	               
	            </tr>
			}
        </tbody>
    </table>