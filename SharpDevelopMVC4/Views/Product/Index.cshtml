@model List<SharpDevelopMVC4.Models.Productacom>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
</head>

 @if (Request.IsAuthenticated)
     {
     
     


  <div class="table-responsive">
 <h1 style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">Product Lists</h1>
   <a href="/product/create" style="float: right; margin-bottom: 30px;" class="btn-primary btn-lg">ADD PRODUCT</a>
 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                
                <th>Product Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Action</th>
                <th>Action</th>
                
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                           
	                <td>@product.Productname</td>
	                 <td>@product.Brand</td>
	                 <td>@product.Price</td>
	                 <td><a href="/Product/Edit/@product.Id" class="btn btn-warning btn-block text-uppercase">Edit</a></td>
	                 <td><a href="/Product/Delete/@product.Id" class="btn btn-danger btn-block text-uppercase" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a></td>
	               
	              
	               
	            </tr>
			}
        </tbody>
    </table>
    </div>
    }