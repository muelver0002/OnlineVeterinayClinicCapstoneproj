@model List<SharpDevelopMVC4.Models.Medicine>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
</head>

  <div class="table-responsive">
 <h1 style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">Medicine Lists</h1>
   
<a href="/medicine/addmed" style="float: right; margin-bottom: 30px;" class="btn-primary btn-lg">ADD MEDICINES</a>
 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Brand</th>
                <th>Price</th>
                <th>Action</th>
                <th>Action</th>
               
                
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                           
	                <td>@product.Name</td>
	                 <td>@product.Brand</td>
	                 <td>@product.Price</td>
	                 
	             
	               <td><a href="/Medicine/Edit/@product.Id" class="btn btn-warning btn-block text-uppercase">Edit</a></td>
	                <td><a href="/Medicine/Delete/@product.Id" class="btn btn-danger btn-block text-uppercase" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a></td>
	              
	               
	            </tr>
			}
        </tbody>
    </table>
    </div>