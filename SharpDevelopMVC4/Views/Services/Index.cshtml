@model List<SharpDevelopMVC4.Models.Servicesacon>
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
</head>
 @if (Request.IsAuthenticated)
     {
     
 <div class="table-responsive">
 <h1 style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">Service Lists</h1>
   <a href="/services/create" style="float: right; margin-bottom: 30px;" class="btn-primary btn-lg">ADD SERVICES</a>
 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
               
                <th>Services</th>
                <th>Price</th>
                <th>Action</th>
                <th>Action</th>
               
                
                 
            </tr>
        </thead>
        <tbody>
			@foreach(var product in Model)
			{
	            <tr>
	                           
	                <td>@product.Servicesname</td>
	                 <td>@product.Price</td>
	                 
	             
	               <td><a href="/Services/Edit/@product.Id"class="btn btn-warning btn-block text-uppercase">Edit</a></td>
	                <td><a href="/Services/Delete/@product.Id" class="btn btn-danger btn-block text-uppercase" onclick="return confirm('Are you sure?')"><i class="fa fa-trash"></i></a></td>
	              
	               
	            </tr>
			}
        </tbody>
    </table>
    </div>
}    