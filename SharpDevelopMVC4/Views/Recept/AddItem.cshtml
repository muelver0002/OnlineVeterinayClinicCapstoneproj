@{
	ViewBag.Title = "AddItem";
	Layout = "~/Views/Shared/_Layout.cshtml";
	
	var patient = ViewBag.DiagnoseId;
	
}

@if(ViewBag.DiagnoseId != null)
{
 <head>
<style>
* {
  box-sizing: border-box;
}

/* Create two equal columns that floats next to each other */
.column {
  float: left;
  width: 50%;
  padding: 10px;
  height: 300px; /* Should be removed. Only for demonstration */
}

/* Clear floats after the columns */
.row:after {
  content: "";
  display: table;
  clear: both;
}
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
  
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}


</style>
</head>


<div class="row">
<div class="col-md-12">
<br>
<div class="row">
<h3  style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">MEDICINE LIST</h3>
<div style=" overflow: scroll; height:220px; width:100%">

 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                
                <th>Unit</th>               
                
                <th>Brand</th>
                
                <th>Price</th>
              
                               
            </tr>
        </thead>
       
        <tbody>
			@foreach(var product in ViewBag.MedList)
			{
	            <tr>
	                <td>@product.Name</td>	               
	                
	                <td>@product.Brand</td>     

                    <td>@product.Price</td>
	            </tr>
			}
        </tbody>
        
    </table>
   
     </div> 
</div>
 <hr> 
</div>







<div class="col-md-4">

<br>
<h4 style="
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">CUSTOMER INFO</h4>
<div style=" overflow: scroll; height: 350px; width: 350px">
       <div class="form-group">
        <label>Customer Name:<label style="color:red"></label>
        <input class="form-control" value="@patient.Customername"  type="text" id="" name="Id" disabled />
        
        <input class="form-control" value="@patient.Customername"  type="hidden" id="" name="Id" required />
       </div>    
        
        <div class="form-group">
         <label>Pet Name:<label style="color:red"></label>
        <input class="form-control" value="@patient.Petname"  type="text" id="" name="" disabled />
        
        <input class="form-control" value="@patient.Petname"  type="hidden" id="" name="" required />
       </div> 
       
       <div class="form-group">
       <label>Pet Breed:<label style="color:red"></label>
        <input class="form-control" value="@patient.PetBreed"  type="text" id="" name="Id" disabled />
        
         <input class="form-control" value="@patient.PetBreed"  type="hidden" id="" name="Id" required />
       </div> 
       
       
        <div class="form-group">
          <label >Concern <label style="color:red"></label></label>
            <textarea class="form-control" value="@patient.Complain" type="text" id="Complain" name="Complain" rows="4" cols="50" required>@patient.Concern</textarea>
        </div>
       
       
		<div class="form-group">
		<label >Complain <label style="color:red"></label></label>
		<textarea class="form-control" value="@patient.Complain" type="text" id="Complain" name="Complain" rows="4" cols="50" required>@patient.Complain</textarea>
		</div>
                
        <div class="form-group">
        <label >Diagnose <label style="color:red"></label></label>
        <textarea class="form-control" type="text" value="@patient.Diagnoselater" id="Diagnoselater" name="Diagnoselater" rows="4" cols="50" required>@patient.Diagnoselater</textarea>
        </div>
       @if(@patient.DateEnd != null)
       { 
       <hr>
               <br>
               <h3>Admission Date</h3>
        <div class="form-group">
       <label>Date Start:<label style="color:red"></label>
        <input class="form-control" value="@patient.DateStart"  type="text" id="" name="" disabled />     
       </div> 
      
        <div class="form-group">
       <label>Date End:<label style="color:red"></label>
        <input class="form-control" value="@patient.DateEnd"  type="text" id="" name="" disabled />     
       </div> 
       
       <div class="form-group">
        <input class="form-control" value=""  type="hidden" id="" name="" required />
       </div>
       }

     </div>
  </div>




  
  
  
  
  
  
  
  
  <div class="col-md-8">
     <section>
     <br>
   <div class="row">
 
   </div>
   <form action="/Recept/AddItem" method="post">
    <div class="row"  style="border: 7px solid black; padding: 30px;  background: linear-gradient(to right, #a86008, #ffba56) !important;  ">
    
     <div class="column" style="">
     

            	
            	

           <div class="row">
            <h4 style="">PRESCRIPTION/SERVICES</h4>  
           
           <div>
          
                <div class="form-group">				   
				   <select  name="medicineId" class="form-control" style="text-align: center; " required>
				   <option value="0">-Select Medicine-</option>
				   @foreach(var pro in ViewBag.MedList)
				   {
				    <option value="@pro.Id">@pro.Name</option>
				   }   
				   </select>	

				 </div>
				 
				 
				 
				 
				 
				 
				 
				 <div class="form-group">
				   <input   Placeholder="Qty" class="form-control"  style="font-size: 15px;  text-align: center;  width: 200px;" min="1" max="" type="number" id="" name="qty1" />				   
			     </div>
			 </div>
			 
            



		   </div>
                
             
             <div class="row">
               <div class="form-group">
			   <select name="serviceId" class="form-control" style="text-align: center; width: 200px; " >
				   <option value="0">-Select Services-</option>
				   @foreach(var cat in ViewBag.Servicelist)
				   {
				    <option value="@cat.Id">@cat.Servicesname</option>
				   }   
				</select>				  
			</div>			 
		   </div>
		   
		   
		   
		   
		   
		   
		   
		   
		   
		   
		   
		   
		    <div class="form-group">
                    <input class="form-control" value="@patient.CustId"  type="hidden" id="" name="Id"  />
                 </div>  
                
                <div class="form-group">
                    <input class="form-control" value="@patient.Id"  type="hidden" id="" name="PId"  />
                </div>  
                
                <div class="form-group">
                    <input class="form-control" value="@patient.Customername"  type="hidden" id="" name="cusname"  />
                </div>
            
            
            
            
            
            
            
            
            
          <div class="row">            
             <div style=" float: left; ">   
            <div class="form-group">
               <button style="font-size: 20px;" type="submit" class="btn btn-primary" >ADD</button>
            </div>
             </div>
             
			<div  style="margin-left: 40px; ">	
            <div class="form-group">
               <a href="/Recept/Done/@patient.Id"  style="font-size: 20px; " class="btn btn-warning btn-sm" onclick="return confirm('Done Presciption? Press Ok')">DONE</a>
            </div>
             </div>
          
         </div>            
           
       </div>
               @if(@patient.DateStart != null)
               {
		       <div class="column" style="">
				<div class"row">
				<h4>ADMISSION</h4> 
				
			     <div class="form-group">
	                    <input class="form-control" Placeholder="Addmision"  type="hidden" id="" name="addmision"  />
	              </div>  
	                 
	             <div class="form-group">
	                    <input class="form-control" Placeholder="Rate"  min="0"  type="number" id="" name="rate"  />
	             </div> 
	
	            <div class="form-group">
	                    <input class="form-control" Placeholder="Days"  min="0" max="50"  type="number" id="" name="days"  />
	             </div> 
	             
		       </div>
	          </div>
	       }
	       
       </div>
        </form>     
        </section>
    </div>
    
    
    
    
    
    
    
@if(ViewBag.receptlist != null)
{
 <div class="col-md-12">
 <div style="margin-top: 0px;">
  <br>
  <h4 style="margin-bottom: 40px;margin-top: 40px;    margin-bottom:  40px;
   text-transform: uppercase;
   font-weight: bold;
   letter-spacing: 1px;">ADDED LIST</h4>
  <div class="row">
 
  <div style=" overflow: scroll; height:250px; width:800; margin-left: 20px; float:right;">
 <table class="table table-striped table-dark table-hover">
        <thead>
            <tr>
                <th>Id</th>   
                <th>Unit</th>               
                <th>Price</th>
                <th>Qty</th>
                <th>Subtotal</th>
              
                               
            </tr>
        </thead>
        <tbody>
			@foreach(var product in ViewBag.receptlist)
			{
	            <tr>
	                
	              
	                <td>@product.Id</td>
	                <td>@product.PName</td>
	                <td>@product.Price</td>
	                <td>@product.Qty</td>
	                <td>@product.Total</td>
	                 
	            </tr>
			}
        </tbody>
    </table>
     </div> 
  </div>
 </div>
  </div>
}
</div>

}