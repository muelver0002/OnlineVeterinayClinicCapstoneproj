@model List<SharpDevelopMVC4.Models.Product>
@{
	ViewBag.Title = "Myinfo";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

 <head>
<style>
#p {
  float: right;
}
.aligncenter {
    text-align: center;
}
body {
background-color: gray;
}
</style>
</head>
 @if (Request.IsAuthenticated)
     {
<h2></h2>
          
     <div class="col-lg-12">
      @foreach(var product in Model)
			{
        <div class="card mt-4">
        <p class="aligncenter">
          <img class="card-img-top" id="i" style="width:300px;height:300px;border-radius: 50%;" src="/uploadedimages/thumb/@product.PictureFilename">
          </p>
          <div class="card-body">
            <h3 style="font-size: 40px;" class="card-title">@product.Name</h3>
            <h4>@product.Address, @product.AddCity</h4>
            <p class="card-text"><a style="color:red">Open Hour's</a>: @product.Unit</p>
            <p class="card-text" rows = "5" cols = "50"><a style="color:black font-weight: bold;">Description</a>: @product.Description</p>
            <a href="/Account/ChangePassword" id="p" style="margin-left:15px;" >Change Password</a>
          </div>
        </div>
        }
         </div>
  
  }