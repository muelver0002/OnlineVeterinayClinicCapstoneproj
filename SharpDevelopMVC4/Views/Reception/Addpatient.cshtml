                </div>
                
                 @{
				   int i =0;
				 
				 }
				 
				<div class="form-group">
				<label>Select Services</label><br>
				 @foreach(var service in ViewBag.Id)
				 {
				  <input type="checkbox" name="Services[]" value="@service.Servicesname" > @service.Servicesname
				  <br>
				 }
				 
                <br>
                 <div class="form-group">
                    <label >Pet Name </label>
                    <input class="form-control" type="text" id="Petname" name="Petname" required/>
                </div>
                
                
                 <div class="form-group">
                    <label >Pet Type </label>
                    <input class="form-control"  type="text" id="Pettype" name="Pettype" required/>
                </div>
                
                
               
                 
                
                
                <label>Gender</label>
				   <select name="Gender" class="form-control" required>
				   <option>Gender</option>
				  
				    <option value="Male">Male</option>
				    <option value="Female">Female</option>
				      
				   </select>
				   
				 </div>
             
                
                  </div>
                
                   <div class="col-md-6">
                
                 <div class="form-group">
                    <label >Pet Breed </label>
                    <input class="form-control"  type="text" id="PetBreed" name="PetBreed" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Color </label>
                    <input class="form-control"  type="text" id="Petcolor" name="Petcolor" required/>
                </div>
               
            
               
                  
                  <div class="form-group">
                    <label>Birth Date</label>
                    <input class="form-control datepicker" Placeholder="dd/mm/yyyy" type="date" id="" name="Bdate" required/>
                </div>
          

                <div class="form-group">
                    <label >Blood Type </label>
                    <input class="form-control" type="text" id="Bloodtype" name="Bloodtype" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Age</label>
                    <input class="form-control" type="number" id="Petage" name="Petage" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Weight </label>
                    <input class="form-control" type="number" id="Weight" name="Weight" required/>
                </div>
                
                <div class="form-group">
                    <label >Pet Temperature</label>
                    <input class="form-control" type="number" id="Temperature" name="Temperature" required/>
                </div>
                
              
                
                 <div class="form-group">
                    <label >Complain </label>
                    <textarea class="form-control" type="text" id="Complain" name="Complain" rows="4" cols="50" required></textarea>
                </div>
               
               
               
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block text-uppercase">Send</button>

           		</div>
               	</div>	               
            </form>
            
